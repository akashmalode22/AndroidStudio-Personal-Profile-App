<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".educationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/startgreen">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:src="@drawable/ic_build_black_24dp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\tProgramming"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@color/startgreen"
                android:textColor="#FFF"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:textSize="17sp"
                android:text="C, C++, C#, Java, Python, Assembly x86"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="\tSoftwares"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@color/startgreen"
                android:textColor="#FFF"/>

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:text="Unity Engine, Android Studio"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="\tIDE"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@color/startgreen"
                android:textColor="#FFF"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:text="JetBrains CLion, NetBeans, Visual Studio"
                android:textSize="17sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="\tWeb Development"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@color/startgreen"
                android:textColor="#FFF"/>

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:text="HTML, CSS"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="\tDatabases"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@color/startgreen"
                android:textColor="#FFF"/>

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:textSize="17sp"
                android:text="SQL, Microsoft Suite"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>